<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LoadPhotoToLocalAppData.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    Visual="Material"
    BackgroundColor="Black">

    <StackLayout>
        <StackLayout Margin="50,0">
            <Entry
                x:Name="TitleEntry"
                Margin="0,30,0,0"
                BackgroundColor="LightGray"
                Placeholder="Введите название" />

            <StackLayout
                Margin="0,10"
                Orientation="Horizontal"
                Spacing="10">
                <Button
                    x:Name="GelereaBtn"
                    Padding="30,10"
                    BackgroundColor="Orange"
                    Clicked="GetPhotoAsync"
                    CornerRadius="30"
                    HorizontalOptions="Start"
                    Text="ГАЛЕРЕЯ"
                    TextColor="White" />
                <Button
                    x:Name="TakePhotoBtn"
                    Padding="30,10"
                    BackgroundColor="Orange"
                    Clicked="TakePhotoAsync"
                    CornerRadius="30"
                    HorizontalOptions="EndAndExpand"
                    Text="КАМЕРА"
                    TextColor="White" />
            </StackLayout>
            <Button
                x:Name="AddBtn"
                Margin="0,20"
                Padding="30,10"
                BackgroundColor="Orange"
                Clicked="AddBtn_Clicked"
                CornerRadius="20"
                HorizontalOptions="FillAndExpand"
                Text="Добавить"
                TextColor="White" />

        </StackLayout>
        <ScrollView>
            <StackLayout>
                <ListView
                    x:Name="imgList"
                    HasUnevenRows="True"
                    IsPullToRefreshEnabled="True"
                    ItemTapped="imgList_ItemTapped"
                    BackgroundColor="Black">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <SwipeView>
                                    <SwipeView.RightItems>
                                        <SwipeItems>
                                            <SwipeItem
                                                BackgroundColor="Orange"
                                                Clicked="SwipeItem_Clicked"
                                                CommandParameter="{Binding Id}"
                                                IconImageSource="delete.png"
                                                Text="удалить" />
                                        </SwipeItems>
                                    </SwipeView.RightItems>
                                    <StackLayout BackgroundColor="DarkGray">
                                        <Label
                                            Padding="10,20"
                                            FontSize="18"
                                            Text="{Binding Title}"
                                            BackgroundColor="DarkGray" />
                                        <ff:CachedImage Margin="10,20" Source="{Binding Path}" />
                                    </StackLayout>
                                </SwipeView>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>

    </StackLayout>

</ContentPage>
